# Environment variables for Docker Compose
# Copy this file to .env and modify as needed

# Database Credentials
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=hft-secure-password-change-me
MONGODB_DATABASE=hft_trading_db

# InfluxDB Configuration
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=hft-influx-password-change-me
INFLUXDB_ORG=idyll-hft-systems
INFLUXDB_BUCKET=trading-data
INFLUXDB_TOKEN=hft-super-secret-token-change-me

# Grafana Configuration
GRAFANA_PASSWORD=hft-grafana-admin-password

# Redis Configuration (if authentication needed)
REDIS_PASSWORD=hft-redis-password-change-me

# Application Configuration
NODE_ENV=production
LOG_LEVEL=info
ENABLE_MONITORING=true
ENABLE_WEB_INTERFACE=true

# Security Settings
JWT_SECRET=your-jwt-secret-key-change-me
API_KEY=your-api-key-change-me

# Trading Configuration
ENABLE_LIVE_TRADING=false
PAPER_TRADING_MODE=true
MAX_POSITION_SIZE=10000
RISK_LIMIT_PERCENT=2.0

# Performance Settings
MAX_WORKERS=4
MEMORY_LIMIT=2048
CPU_LIMIT=2.0
